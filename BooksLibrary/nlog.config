<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Trace"
      internalLogFile="C:\Users\chs\source\repos\NetCoreApiServer\InternalLogs\internallog.txt">
  <targets>
    <target name="logfile" xsi:type="File"
            fileName="C:/Users/Jakub/Documents/C#/1 task/BooksLibrary/Logs/${shortdate}_logfile.txt"
            layout="${longdate}|${event-properties:iteam=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"/>
    <target name="exceptions" xsi:type="File"
            fileName="C:/Users/Jakub/Documents/C#/1 task/BooksLibrary/Logs/${shortdate}_logfile_exceptions.txt"
            layout="${longdate}|${event-properties:iteam=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"/>
    <target name="request-time" xsi:type="File"
            fileName="C:/Users/Jakub/Documents/C#/1 task/BooksLibrary/Logs/${shortdate}_logfile_request-time.txt"
            layout="${longdate}|${event-properties:iteam=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"/>
  </targets>
  <rules>
    <logger name="*" minlevel="Info" writeTo="logfile" />
    <logger name="BooksLibrary.*" minlevel="Error" writeTo="exceptions" />
    <logger name="BooksLibrary.Middleware.RequestTimeMiddleware" minlevel="Trace" writeTo="request-time" />
  </rules>
</nlog>